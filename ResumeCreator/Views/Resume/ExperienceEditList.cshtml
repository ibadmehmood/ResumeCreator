@model ResumeCreator.Models.ExperienceListViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<head>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"> </script>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <link rel="stylesheet" href="~/Content/customstyles.css">
</head>
<body style="position: relative;">
    @Html.Partial("NavBar")

   

    <!--page content-->
    <div class="container" style="margin-top:30px;">
        <div id="test1" class="col s12">
            <div class="row">
                <form class="col s12">
                    <div class="row">
                        <div class="col s12">
                            <span style="font-size:1.6em">WRITE ABOUT</span><span style="font-size:1.6em;font-weight:bold;"> EXPERIENCE</span>
                            <p style="font-size:1.3em">
                                List your work experience, from the most recent to the oldest. Feel free to use our pre-written examples.
                            </p>
                        </div>
                    </div>
                    <!--show list of experience-->
                    <div class="row">
                        <div class="col s12">
                            <ul class="collection with-header">

                                @foreach (var experience in Model.experiences)
                                {
                                    <li class="collection-item">
                                        <div>
                                            <span>@experience.job_title at @experience.employer</span>
                                            <a href="/Resume/Experience/Edit/@experience.PersonalInfo_id/@experience.id" class="secondary-content"><i class="material-icons">edit</i></a>
                                        </div>
                                    </li>
                                }
                                
                            </ul>

                        </div>

                    </div>

                    <!--end of experincelist-->
                    <div class="row">



                        <div class="col s4 ">

                            <a class="waves-effect waves-light btn-large right-align" href="/Resume/Review/@ViewBag.resumeid">BACK</a>
                        </div>
                        <div class="col s4 offset-s4">

                            <a class="waves-effect waves-light btn-large align-center" href="/Resume/Experience/@ViewBag.resumeid"><i class="material-icons">add</i></a>
                        </div>
                        
                    </div>
                </form>
            </div>

        </div>
    </div>
    <!-- end of page content-->
    <div class="" style="margin-top:30px;">
        <footer class="page-footer teal darken-1" style="position: absolute;bottom: 0;left:0;right:0;">
            <div class="container ">
                <div class="row teal darken-1">
                    <div class="footer-copyright teal darken-1">
                        <div class="container teal darken-1" style="color:#ffff">
                            © QuickResume 2019
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <footer class="page-footer teal darken-1" style="position: absolute;bottom: 0;left:0;right:0;">
        <div class="container ">
            <div class="row teal darken-1">
                <div class="footer-copyright teal darken-1">
                    <div class="container teal darken-1" style="color:#ffff">
                        © QuickResume 2019
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>
<script>

    //var instance = M.Tabs.init(el, options);

    // Or with jQuery

    $(document).ready(function () {
        $('.tabs').tabs();
        $('.datepicker').datepicker();
        $(".dropdown-trigger").dropdown();
    });
</script>
</html>





