@model ResumeCreator.Models.Education

@{
    Layout = null;
}


<!DOCTYPE html>
<head>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"> </script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Compiled and minified JavaScript -->

    <link rel="stylesheet" href="~/Content/customstyles.css">
</head>
<body style="position: relative;">
    @Html.Partial("NavBar")

    

    <!--page content-->
    <div class="container" style="margin-top:30px;">
        <div id="test1" class="col s12">
            <div class="row">

                <div class="row">
                    <div class="col s12">
                        <span style="font-size:1.6em"></span><span style="font-size:1.6em;font-weight:bold;">EDUCATION</span>
                        <p style="font-size:1.3em">
                            Add information about your educational background.
                        </p>
                    </div>
                </div>
                <form method="post" action="/Resume/Education/Edit/@Model.PersonalInfo_id/@Model.id">
                    <div class="row">
                        <div class="input-field col s6">
                            @Html.AntiForgeryToken()
                            <input id="resumeid" type="hidden" name="resumeid" value="@Model.PersonalInfo_id">
                            <input id="educationid" type="hidden" name="educationid" value="@Model.id">
                            <input id="school_name" name="school_name" type="text" class="validate" value="@Model.school_name">
                            <label for="school_name">School name</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="city" name="city" type="text" class="validate" value="@Model.city">
                            <label for="city">City</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="state" name="state" type="text" class="validate" value="@Model.state">
                            <label for="state">State</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="degree" name="degree" type="text" class="validate" value="@Model.degree">
                            <label for="degree">Degree</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="field_of_study" name="field_of_study" type="text" class="validate" value="@Model.field_of_study">

                            <label for="field_of_study">Field of study</label>
                        </div>
                        <div class="input-field col s6">
                            <input type="text" class="datepicker" id="end_date" name="end_date" value="@Model.end_date">
                            <label for="end_date">End Date</label>
                        </div>
                    </div>


                    <div class="row">



                        <div class="col s4 ">

                            <a class="waves-effect waves-light btn-large" href="/Resume/Review/@Model.PersonalInfo_id">BACK</a>
                        </div>

                        <div class="col s4 offset-s4 right-align">

                            <button class="waves-effect waves-light btn-large">UPDATE & NEXT</button>
                        </div>
                    </div>
                </form>

            </div>

        </div>
    </div>
    <!-- end of page content-->
    <div class="" style="margin-top: 30px;font-size: 1.6em;">
        <div class="container">
            <div class="row">
                <div class="col " style="color:black;">

                </div>
            </div>
        </div>

    </div>

    <div class="" style="margin-top:30px;">
        <footer class="page-footer teal darken-1" style="position: absolute;bottom: 0;left:0;right:0;">
            <div class="container ">
                <div class="row teal darken-1">
                    <div class="footer-copyright teal darken-1">
                        <div class="container teal darken-1" style="color:#ffff">
                            © QuickResume 2019
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script>

    //var instance = M.Tabs.init(el, options);

    // Or with jQuery

    $(document).ready(function () {
        $('.tabs').tabs();
        $('.datepicker').datepicker();
        $(".dropdown-trigger").dropdown();
    });
</script>
</html>





