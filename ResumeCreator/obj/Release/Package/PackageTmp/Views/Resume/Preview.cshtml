@model ResumeCreator.Models.ResumeViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<head>

    <meta name="viewport" content="width=device-width, initial-scale=1">


    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"> </script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/customstyles.css">
    <style>
        * {
            font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen-Sans,Ubuntu,Cantarell,"Helvetica Neue",sans-serif;
            font-size: 1em;
        }

      
        .outsideresume {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            width: 210mm;
            height: 297mm;
            margin: auto;
            margin-bottom: 25px;
        }

        body {
            width: 210mm;
            height: 297mm;
            padding: 5mm;
            /* to centre page on screen*/
        }

        .icon-color {
            color: white;
        }

        .pagelayout {
            overflow: hidden;
            height: 100%;
            width: 100%;
        }

        .personalinfo:hover {
            border: 3px solid #00897b;
        }

        .skill:hover {
            border: 3px solid #00897b;
        }

        .employment:hover {
            border: 3px solid #00897b;
        }

        .education:hover {
            border: 3px solid #00897b;
        }

        .summary:hover {
            border: 3px solid #00897b;
        }

        .personalinfo:hover .personalinfoedit {
            visibility: visible;
        }

        .summary:hover .summaryedit {
            visibility: visible;
        }

        .employment:hover .employmentedit {
            visibility: visible;
        }

        .education:hover .educationedit {
            visibility: visible;
        }

        .skill:hover .skilledit {
            visibility: visible;
        }


        .personalinfoedit, .summaryedit, .educationedit, .employmentedit, .skilledit {
            visibility: hidden;
        }

            .personalinfoedit:hover .icon-color {
                color: black;
            }

            .summaryedit:hover .icon-color {
                color: black;
            }

            .skilledit:hover .icon-color {
                color: black;
            }

            .educationedit:hover .icon-color {
                color: black;
            }

            .employmentedit:hover .icon-color {
                color: black;
            }
    </style>
</head>
<body >

    <!--resume view-->

    <div class="resumebody">
        <div class="row pagelayout">
            <!--Personal Info-->
            <div class="col s12 personalinfo" style="position:relative;">
                <span class="right-align personalinfoedit" style="position:absolute;top:0;right:0;background-color:#00897b;padding:5px;"> <a href="#!"><i class="material-icons icon-color">edit</i></a></span>
                <h2>@Model.personalinfo.first_name  @Model.personalinfo.last_name <span class="right-align"> </h2>
                <div class="info-item" style="margin-top:5px;">
                    <span class="info-label" style="font-weight:bold;">
                        Phone:
                    </span>
                    <span class="info-text" style="margin-left:35px;">@Model.personalinfo.phone</span>
                </div>

                <div class="info-item" style="margin-top:5px;">
                    <span class="info-label" style="font-weight:bold;">
                        Email:
                    </span>
                    <span class="info-text" style="margin-left:35px;">
                        @Model.personalinfo.email
                    </span>
                </div>

                <div class="info-item" style="margin-top:5px;">
                    <span class="info-label" style="font-weight:bold;">
                        Address:
                    </span>
                    <span class="info-text" style="margin-left:30px;">
                        @Model.personalinfo.address, @Model.personalinfo.city, @Model.personalinfo.state @Model.personalinfo.zip_code
                    </span>
                </div>

            </div>

            <!--EndOFPersonalInfo-->
            <!--ProfessionalSummary-->
            <div class="col s12 summary" style="position:relative">
                <span class="right-align summaryedit" style="position:absolute;top:0;right:0;background-color:#00897b;padding:5px;"> <a href="#!"><i class="material-icons icon-color">edit</i></a></span>
                <h4 style="background-color:#C2C2C2;padding:10px;color:#283648;">PROFESSIONAL SUMMARY</h4>
                <div>
                    <div>
                        @foreach (var summary in Model.summary)
                        {
                            <div>@summary.text</div>

                        }

                    </div>
                </div>
            </div>
            <!--ProfessionalSummaryEnd-->
            <!--Employment-->
            <div class="col s12 employment" style="position:relative">
                <span class="right-align employmentedit" style="position:absolute;top:0;right:0;background-color:#00897b;padding:5px;"> <a href="#!"><i class="material-icons icon-color">edit</i></a></span>
                <h4 style="background-color:#C2C2C2;color:#283648;padding:10px;">EMPLOYMENT HISTORY</h4>
                @foreach (var employment in @Model.experiences)
                {
                    <div class="row">
                        <div class="col s4 right-align" style="padding-right:20px;">
                            <div class="info-label" style="font-weight:bold;">
                                @employment.start_date – @employment.end_date
                            </div>
                            <div class="info-label" style="font-weight:bold;">
                                @employment.city,@employment.state
                            </div>
                        </div>
                        <div class="col s8 " style="border-left:1px solid lightgrey;padding-left:20px;">
                            <div class="info-label" style="font-weight:bold;">
                                @employment.job_title
                            </div>
                            <div class="info-label" style="font-weight:normal;margin-top:8px;">
                                @employment.description
                            </div>
                        </div>

                    </div>
                }

            </div>
            <!--Employment-->
            <!--Education-->
            <div class="col s12 education" style="position:relative">
                <span class="right-align educationedit" style="position:absolute;top:0;right:0;background-color:#00897b;padding:5px;"> <a href="#!"><i class="material-icons icon-color">edit</i></a></span>
                <h4 style="background-color:#C2C2C2;color:#283648;padding:10px;">EDUCATION</h4>

                @foreach (var education in @Model.educations)
                {
                    <div class="row">
                        <div class="col s4 right-align" style="padding-right:20px;">
                            <div class="info-label" style="font-weight:bold;">
                                @education.end_date
                            </div>

                        </div>
                        <div class="col s8 " style="border-left:1px solid lightgrey;padding-left:20px;">
                            <div class="info-label" style="font-weight:bold;">
                                @education.degree: @education.field_of_study

                            </div>
                            <div class="info-label" style="font-weight:normal;margin-top:8px;">
                                @education.school_name - @education.city, @education.state

                            </div>
                        </div>

                    </div>
                }




            </div>
            <!--Education-->
            <!--Skill-->
            <div class="col s12 skill" style="position:relative">
                <span class="right-align skilledit" style="position:absolute;top:0;right:0;background-color:#00897b;padding:5px;"> <a href="#!"><i class="material-icons icon-color">edit</i></a></span>
                <h4 style="background-color:#C2C2C2;color:#283648;padding:10px;">SKILL</h4>
                <div class="row">
                    <div class="col s6 right-align" style="">
                        @for (int i = 1; i < @Model.skills.Count; i++)
                        {

                            if (i <= 3)
                            {

                                <div style="display:block;margin-bottom:12px;" class="col s12">
                                    <span class="left-align" style="float:left">@Model.skills.ElementAt(i).skill1</span>
                                    <span class="right-align" style="float:right">@Model.skills.ElementAt(i).level</span>
                                </div>
                            }
                        }
                    </div>

                    <div class="col s6 " style="border-left:1px solid lightgrey;">
                        @for (int i = 1; i < @Model.skills.Count; i++)
                        {

                            if (i > 3)
                            {

                                <div style="display:block;margin-bottom:12px;" class="col s12">
                                    <span class="left-align" style="float:left">@Model.skills.ElementAt(i).skill1</span>
                                    <span class="right-align" style="float:right">@Model.skills.ElementAt(i).skill1</span>
                                </div>
                            }
                        }

                    </div>

                </div>
            </div>
            <!--Skill-->
            <!--Skill-->
            <!--Skill-->


        </div>
    </div>

    <!-- end of review view-->





</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"> </script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</html>





